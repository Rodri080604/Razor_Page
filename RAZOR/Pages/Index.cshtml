@page
@model IndexModel
@{
    ViewData["Title"] = "Tareas Asignadas";
}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<div class="container mt-4">
    <h2 class="mb-3">📋 Tareas Asignadas</h2>

    <!-- Botón Crear Tarea -->
    <a asp-page="Create" class="btn btn-primary mb-3">Crear Nueva Tarea</a>

    <!-- Formulario para tamaño de página dinámico -->
    <form method="get" class="mb-3 row g-2">
        <div class="col-auto">
            <label for="tamanoPagina" class="col-form-label">Mostrar:</label>
        </div>
        <div class="col-auto">
            <input type="number" id="tamanoPagina" name="tamanoPagina" class="form-control"
                   min="1" max="@Model.TotalTareas" value="@Model.TamanoPagina"
                   onchange="this.form.submit()" />
        </div>
        <div class="col-auto">
            <span class="col-form-label">tareas por página</span>
        </div>
        <input type="hidden" name="pagina" value="@Model.PaginaActual" />
    </form>

    <!-- Mensaje de error si existe -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <!-- Grid de tareas -->
    @if (!Model.Tareas.Any())
    {
        <p class="alert alert-warning">No hay tareas disponibles.</p>
    }
    else
    {
        <div class="grid-container">
    <div class="grid-item"><b>Nombre Tarea</b></div>
    <div class="grid-item"><b>Fecha Vencimiento</b></div>
    <div class="grid-item"><b>Estado</b></div>
    <div class="grid-item"><b>Acciones</b></div>

    @foreach (var tarea in Model.Tareas)
    {
        <div class="grid-item">@tarea.nombreTarea</div>
        <div class="grid-item">@tarea.fechaVencimiento</div>
        <div class="grid-item">
            <span class="badge @(tarea.estado switch {
                "Pendiente" => "bg-warning text-dark",
                "En curso" => "bg-info",
                "Finalizado" => "bg-success",
                _ => "bg-secondary"
            })">
                @tarea.estado
            </span>
        </div>
        <div class="grid-item actions-container">
            @if (tarea.estado == "Pendiente" || tarea.estado == "En curso")
            {
                <form method="post" asp-page-handler="Completar" style="display:inline;">
                    <input type="hidden" name="id" value="@tarea.idTarea" />
                    <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('¿Está seguro de completar esta tarea?')">✔ Completar</button>
                </form>
            }
            @if (tarea.estado == "Pendiente" || tarea.estado == "En curso")
            {
                <form method="post" asp-page-handler="EnCurso" style="display:inline;">
                    <input type="hidden" name="id" value="@tarea.idTarea" />
                    <button type="submit" class="btn btn-info btn-sm" onclick="return confirm('¿Está seguro de cambiar esta tarea a En curso?')">⏳ En curso</button>
                </form>
            }
            <a asp-page="Edit" asp-route-id="@tarea.idTarea" class="btn btn-primary btn-sm">✏ Editar</a>
            <form method="post" asp-page-handler="Cancelar" style="display:inline;">
                <input type="hidden" name="id" value="@tarea.idTarea" />
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Está seguro de cancelar esta tarea?')">❌ Cancelar</button>
            </form>
        </div>
    }
</div>/*Esto todavia*/

        <!-- Información de paginación -->
        <p class="mt-3">
            Mostrando @Model.Tareas.Count de @Model.TotalTareas tareas (Página @Model.PaginaActual de @Model.TotalPaginas)
        </p>

        <!-- Paginación -->
        <nav>
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.PaginaActual == 1 ? "disabled" : "")">
                    <a class="page-link" asp-page="./Index" asp-route-pagina="@(Model.PaginaActual - 1)" asp-route-tamanoPagina="@Model.TamanoPagina">Anterior</a>
                </li>
                @for (int i = 1; i <= Model.TotalPaginas; i++)
                {
                    <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                        <a class="page-link" asp-page="./Index" asp-route-pagina="@i" asp-route-tamanoPagina="@Model.TamanoPagina">@i</a>
                    </li>
                }
                <li class="page-item @(Model.PaginaActual == Model.TotalPaginas ? "disabled" : "")">
                    <a class="page-link" asp-page="./Index" asp-route-pagina="@(Model.PaginaActual + 1)" asp-route-tamanoPagina="@Model.TamanoPagina">Siguiente</a>
                </li>
            </ul>
        </nav>
    }
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}