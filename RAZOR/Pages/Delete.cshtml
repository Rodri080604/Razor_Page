@page
@model RAZOR.Pages.DeleteModel
@{
}
<h2>Confirmar Eliminación</h2>

<p>¿Estás seguro de eliminar la tarea "@Model.TareaAEliminar.nombreTarea"?</p>

<form method="post">
    <input type="hidden" name="id" value="@Model.TareaAEliminar.idTarea" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>